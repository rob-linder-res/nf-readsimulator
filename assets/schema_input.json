{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/readsimulator/master/assets/schema_input.json",
    "title": "nf-core/readsimulator pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "human_fasta": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^\\S+\\.fn?a(sta)?(\\.gz)?$",
                "errorMessage": "Fasta file for humans '.fa', 'fna', '.fasta', '.fna.gz', '.fa.gz', or '.fast.gz'"
            },
            "bug_fasta": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^\\S+\\.fn?a(sta)?(\\.gz)?$",
                "errorMessage": "Fasta file for humans '.fa', 'fna', '.fasta', '.fna.gz', '.fa.gz', or '.fast.gz'"
            }
        },
        "required": ["sample", "human_fasta", "bug_fasta"]
    }
}
